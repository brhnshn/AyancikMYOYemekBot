<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ayancık MYO Yemek</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body class="d-flex flex-column min-vh-100">

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark py-3">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center fw-bold" asp-controller="Home" asp-action="Index" style="font-size: 1.3rem;">
                    <i class="bi bi-buildings-fill me-2" style="color: #F37021;"></i>
                    Ayancık MYO <span class="fw-light ms-1 text-white-50">Yemek</span>
                </a>

                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0 align-items-center">
                        <li class="nav-item me-3">
                            <a class="nav-link fw-medium" asp-controller="Home" asp-action="Index">Günün Menüsü</a>
                        </li>
                        <li class="nav-item me-4">
                            <a class="nav-link fw-medium" asp-controller="Home" asp-action="Privacy">Gizlilik</a>
                        </li>
                        <li class="nav-item">
                            <a href="https://t.me/AyancikMYOYemekBot" target="_blank" class="btn btn-sinop rounded-pill px-4 btn-sm">
                                <i class="bi bi-telegram me-2"></i>Botu Başlat
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container flex-grow-1">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-auto pt-4 pb-4">
        <div class="container">
            <div class="row align-items-center justify-content-between">
                <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                    <div class="fw-bold text-white mb-1">Ayancık MYO Yemek Botu</div>
                    <small class="text-white-50">
                        &copy; @DateTime.Now.Year Tüm Hakları Saklıdır.
                        <span class="mx-1">|</span>
                        <a asp-controller="Home" asp-action="Privacy" class="text-decoration-none text-white-50 hover-orange">Gizlilik Politikası</a>
                    </small>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <a href="https://instagram.com/burhan_sahn" class="text-decoration-none me-3"><i class="bi bi-instagram fs-5 text-secondary"></i></a>
                    <a href="https://t.me/AyancikMYOYemekBot" class="text-decoration-none"><i class="bi bi-telegram fs-5" style="color: #4dabf7;"></i></a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>